{
    "name": "wieni/wmmailable",
    "type": "drupal-module",
    "description": "A modern, plugin-based API for sending mails in Drupal 8.",
    "license": "MIT",
    "authors": [
        {
            "name": "Wieni",
            "email": "info@wieni.be"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "drupal/core": "^8.0 || ^9.0",
        "tijsverkoyen/css-to-inline-styles": "^2.2",
        "drupal/mailsystem": "^4.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.0",
        "wieni/wmcodestyle": "^1.3"
    },
    "suggest": {
        "hampe/inky": "to use the Foundation for Emails renderer"
    },
    "repositories": {
        "drupal-composer": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "scripts": {
        "coding-standards": [
            "@composer normalize",
            "php-cs-fixer fix --config=.php_cs.php"
        ]
    }
}
